<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:effects="clr-namespace:FakeStore.Effects"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasBackButton="False"
             x:Class="FakeStore.Views.FakeStoreItemListView">
    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="FakeStoreListItemTemplate">
                <ViewCell x:Name="FakeStoreItemCell">
                    <Grid BackgroundColor="White">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding BindingContext.FakeStoreItemSelectedCommand, Source={x:Reference FakeStoreItemList}}"
                                                  CommandParameter="{Binding .}"/>
                        </Grid.GestureRecognizers>
                        <Image Grid.Column="0"
                               Grid.RowSpan="6"
                               HorizontalOptions="Center"
                               Margin="5"
                               Source="{Binding image}"
                               VerticalOptions="Center"/>
                        <Label FontAttributes="Bold"
                               FontSize="Title"
                               Grid.Column="1"
                               Grid.Row="0"
                               HorizontalOptions="StartAndExpand"
                               LineBreakMode="TailTruncation"
                               Text="{Binding title}"
                               TextColor="Black"/>
                        <Label FontAttributes="Italic"
                               FontSize="Subtitle"
                               Grid.Column="1"
                               Grid.Row="1"
                               HorizontalOptions="StartAndExpand"
                               LineBreakMode="TailTruncation"
                               Text="{Binding description}"
                               TextColor="Black"/>
                        <Label FontSize="Caption"
                               Grid.Column="1"
                               Grid.Row="2"
                               HorizontalOptions="StartAndExpand"
                               Text="{Binding category, Converter={StaticResource prefixValueConverter}, ConverterParameter='Category:  '}"
                               TextColor="Black"
                               VerticalOptions="Start"/>
                        <Label FontSize="Caption"
                               Grid.Column="1"
                               Grid.Row="3"
                               HorizontalOptions="StartAndExpand"
                               Text="{Binding rating.rate, Converter={StaticResource prefixValueConverter}, ConverterParameter='Rating:  '}"
                               TextColor="Black"/>
                        <Label FontSize="Caption"
                               Grid.Column="1"
                               Grid.Row="4"
                               HorizontalOptions="StartAndExpand"
                               Text="{Binding rating.count, Converter={StaticResource prefixValueConverter}, ConverterParameter='Count:  '}"
                               TextColor="Black"/>
                        <Label FontSize="Caption"
                               Grid.Column="1"
                               Grid.Row="5"
                               HorizontalOptions="StartAndExpand"
                               Text="{Binding price, Converter={StaticResource prefixValueConverter}, ConverterParameter='$ '}"
                               TextColor="Black"/>
                    </Grid>
                </ViewCell>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding LogoutCommand}"
                     Text="LogOut"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout BackgroundColor="White"
                     Padding="8">
            <Picker BackgroundColor="White"
                    ItemsSource="{Binding CategoryList}"
                    SelectedItem="{Binding SelectedCategory}"
                    Title="Category">
                <Picker.Effects>
                    <effects:RoundedPickerEffect/>
                </Picker.Effects>
            </Picker>
            <Picker BackgroundColor="White"
                    ItemsSource="{Binding SortByList}"
                    SelectedItem="{Binding SelectedSortBy}"
                    Title="Sort By">
                <Picker.Effects>
                    <effects:RoundedPickerEffect/>
                </Picker.Effects>
            </Picker>
            <ListView BackgroundColor="Transparent"
                      ItemsSource="{Binding FakeStoreItemList}"
                      ItemTemplate="{StaticResource FakeStoreListItemTemplate}"
                      RowHeight="210"
                      SelectionMode="None"
                      SeparatorColor="Black"
                      x:Name="FakeStoreItemList">
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
