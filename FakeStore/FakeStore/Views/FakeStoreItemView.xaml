<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FakeStore.Views.FakeStoreItemView">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding LogoutCommand}"
                     Text="LogOut"/>
    </ContentPage.ToolbarItems>
    <ScrollView>
        <StackLayout Margin="10,10,10,10" VerticalOptions="FillAndExpand">
            <Image HorizontalOptions="Center"
                   Source="{Binding Image}"/>
            <Label Margin="0,10,0,0"
                   Text="{Binding Title}"/>
            <Label Margin="0,10,0,0"
                   Text="{Binding Description}"/>
            <Label Text="{Binding Category, Converter={StaticResource prefixValueConverter}, ConverterParameter='Category:  '}"/>
            <Label Text="{Binding Count, Converter={StaticResource prefixValueConverter}, ConverterParameter='Count:  '}"/>
            <Label Text="{Binding Rate, Converter={StaticResource prefixValueConverter}, ConverterParameter='Rating:  '}"/>
            <Label Text="{Binding Price, Converter={StaticResource prefixValueConverter}, ConverterParameter='$'}"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
